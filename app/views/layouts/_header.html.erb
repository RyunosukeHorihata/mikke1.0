<div class="de-header">
  <div class="de-header2">
    <%= link_to 'mikke', '/', class: "de-header_title" %>
  </div>
  <div class="de-header3">
    <div class="de-header3-search">
      <div class="de-header3-search2">
        <%= form_tag(search_path(:keyword), method: :get, enforce_utf8: false) do %>
          <%= text_field_tag :keyword, "", class: 'input-keyword', placeholder: "キーワードで検索　ex. 日本酒・英会話", required: :true %>
          <%= submit_tag '探す', class: 'search-btn', name: nil %>
        <% end %>
      </div>
    </div>
  </div>
</div>